#version 330

uniform mat4 mMatrix; 
uniform mat4 pMatrix = mat4(1.0);
uniform vec3 color = vec3(1.0f,1.0f,0.0f);

in vec2 pos2D;
in vec2 inTexCoord;

out vec3 OutColor;
out vec2 TexCoord;

void main()
{
   gl_Position = pMatrix* mMatrix * vec4( pos2D.x, pos2D.y, 0, 1 );
   OutColor = color;
   TexCoord = inTexCoord;
}